# CryptexQ Environment Configuration
# Copy this file to .env and fill in your values

# Flask Configuration (REQUIRED)
SECRET_KEY=your-secret-key-here-64-hex-characters-generate-with-secrets-module
FLASK_ENV=development

# Message Integrity (REQUIRED)
CRYPTEXQ_HMAC_SECRET=your-hmac-secret-here-64-hex-characters-generate-with-secrets-module

# Database (Optional - demo mode works without)
MONGO_URI=mongodb://localhost:27017/cryptexq

# CORS Configuration
CORS_ORIGIN=*

# Server Configuration
PORT=5000

# Generate secrets with:
# python -c "import secrets; print(secrets.token_hex(32))"

