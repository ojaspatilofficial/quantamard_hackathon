# Environment variables template for production deployment
# Copy this file to .env and fill in your values

# MongoDB Connection (Required for production)
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/cryptexq_db?retryWrites=true&w=majority

# Flask Secret Key (Generate a strong random key)
SECRET_KEY=your-super-secret-key-change-this-in-production

# HMAC Secret for message integrity
CRYPTEXQ_HMAC_SECRET=your-hmac-secret-key

# Optional: Port (Render sets this automatically)
PORT=5000
